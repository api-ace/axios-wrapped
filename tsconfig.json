{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ESNext",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "lib": [
      "ESNext"
    ],
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}